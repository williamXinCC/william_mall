page {
  background-color: #f8f8f8;
}
.collection .rf-swipe-item {
  margin: 0 10rpx 20rpx;
}
.collection .rf-list-item {
  padding: 0;
  margin: 0;
}
.collection .left {
  padding: 20rpx 20rpx 10rpx;
}
.collection .left .image {
  width: 260rpx;
  height: 240rpx;
}
.collection .mid {
  width: calc(100vw - 350rpx);
  margin: 0 10rpx;
}
.collection .mid .title {
  height: 88rpx;
  font-size: 30rpx;
  color: #303133;
}
.collection .mid .data {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 10rpx 0 5rpx;
  font-size: 28rpx;
  color: #606266;
}
.collection .mid .data .item {
  height: 50rpx;
  line-height: 50rpx;
}
.collection .mid .data .iconfont {
  color: #909399;
  margin-right: 10rpx;
}
.collection .mid .state-wrapper {
  height: 48rpx;
}
.collection .mid .state-wrapper .state {
  margin: 5rpx 0;
  background-color: #fa436a;
  opacity: 0.8;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}
.collection .mid .bottom {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #909399;
}
.collection .mid .bottom .price {
  color: #fa436a;
  font-size: 32rpx;
}
.collection .mid .bottom .price:before {
  content: '￥';
  font-size: 24rpx;
}

